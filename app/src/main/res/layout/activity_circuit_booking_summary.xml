<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“‹ RÃ©capitulatif"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Circuit Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCircuitTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rome &amp; Florence"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvCircuitDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Italie"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvCircuitDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7 jours / 6 nuits"
                    android:textSize="14sp"
                    android:textColor="#673AB7"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PÃ©riode du circuit -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… PÃ©riode du circuit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDepartureDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Du 12/01/2026 au 18/01/2026"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Voyageurs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Voyageurs"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvTravelers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 adultes, 2 enfants"
                    android:textSize="14sp"
                    android:textColor="#212121" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Programme du circuit -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Programme du circuit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/layoutProgramList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DÃ©tails de la rÃ©servation -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¨ HÃ©bergement &amp; Transport"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <!-- Formule -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ½ï¸ Formule"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvMealPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Petit-dÃ©jeuner inclus"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- HÃ´tel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ¨ Niveau d'hÃ´tel"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvHotelLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standard"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- Vol -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœˆï¸ Classe de vol"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvFlightClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economy"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ActivitÃ©s sÃ©lectionnÃ©es -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ ActivitÃ©s optionnelles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/layoutActivitiesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DÃ©tail des prix -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° DÃ©tail des prix"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <!-- Prix de base -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prix de base"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvBasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 TND"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- SupplÃ©ment hÃ´tel -->
                <LinearLayout
                    android:id="@+id/layoutHotelSupplement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SupplÃ©ment hÃ´tel"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvHotelSupplement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 0.00 TND"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- SupplÃ©ment vol -->
                <LinearLayout
                    android:id="@+id/layoutFlightSupplement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SupplÃ©ment vol"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvFlightSupplement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 0.00 TND"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- ActivitÃ©s optionnelles -->
                <LinearLayout
                    android:id="@+id/layoutActivitiesSupplement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ActivitÃ©s optionnelles"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tvActivitiesSupplement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 0.00 TND"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- SÃ©parateur -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#673AB7"
                    android:layout_marginBottom="12dp" />

                <!-- Prix total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’° PRIX TOTAL"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 TND"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bouton payer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ’³ Payer"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:backgroundTint="#673AB7" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
