<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Badge disponibilité en haut -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badgeAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="11sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contenu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nom de la chambre -->
            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chambre Standard"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"/>

            <!-- Capacité et taille -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_profile"
                        android:tint="#666666"/>

                    <TextView
                        android:id="@+id/tvCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 personnes"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_info"
                        android:tint="#666666"/>

                    <TextView
                        android:id="@+id/tvSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 m²"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Type de lit -->
            <TextView
                android:id="@+id/tvBedType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 lit double"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvRoomDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description de la chambre"
                android:textSize="14sp"
                android:textColor="#888888"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <!-- Équipements de la chambre -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRoomAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Footer avec prix et bouton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Prix et infos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Petit-déjeuner inclus -->
                    <LinearLayout
                        android:id="@+id/layoutBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_check"
                            android:tint="#4CAF50"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Petit-déjeuner inclus"
                            android:textSize="13sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <!-- Annulation gratuite -->
                    <LinearLayout
                        android:id="@+id/layoutCancellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_check"
                            android:tint="#4CAF50"/>

                        <TextView
                            android:id="@+id/tvCancellation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Annulation gratuite"
                            android:textSize="13sp"
                            android:textColor="#4CAF50"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>

                    <!-- Prix -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 €"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B6B"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / nuit"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Bouton réserver -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReserveRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Réserver"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    android:backgroundTint="#FF6B6B"
                    android:textColor="@android:color/white"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
