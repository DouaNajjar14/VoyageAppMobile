<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passagers et classe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Adultes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adultes"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 ans et +"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinusAdults"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="-"
            android:textSize="20sp"
            app:cornerRadius="24dp" />

        <TextView
            android:id="@+id/tvAdultsCount"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlusAdults"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- Enfants -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enfants"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-17 ans"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinusChildren"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="-"
            android:textSize="20sp"
            app:cornerRadius="24dp" />

        <TextView
            android:id="@+id/tvChildrenCount"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlusChildren"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- Bébés -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bébés"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-2 ans"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinusBabies"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="-"
            android:textSize="20sp"
            app:cornerRadius="24dp" />

        <TextView
            android:id="@+id/tvBabiesCount"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlusBabies"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="24dp" />

    </LinearLayout>

    <!-- Classe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEconomy"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Économique"
            android:checked="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPremiumEconomy"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Éco" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBusiness"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Affaires" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFirst"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Première" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Bouton Valider -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Valider"
        android:textSize="16sp"
        app:cornerRadius="12dp" />

</LinearLayout>
