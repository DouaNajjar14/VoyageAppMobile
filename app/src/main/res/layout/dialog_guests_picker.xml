<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Adultes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adultes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 ans et plus"
                android:textSize="13sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecreaseAdults"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#FF6B6B"
            android:textColor="#FF6B6B"/>

        <TextView
            android:id="@+id/tvAdultsCount"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIncreaseAdults"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FF6B6B"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Enfants -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enfants"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-17 ans"
                android:textSize="13sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecreaseChildren"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="#FF6B6B"
            android:textColor="#FF6B6B"/>

        <TextView
            android:id="@+id/tvChildrenCount"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIncreaseChildren"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FF6B6B"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
