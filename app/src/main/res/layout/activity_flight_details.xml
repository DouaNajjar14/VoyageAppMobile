                        android:textStyle="bold"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/tvFirstFeatures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Features"
                        android:textSize="12sp"
