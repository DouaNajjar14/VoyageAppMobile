<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personnaliser votre circuit"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Circuit Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCircuitTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rome &amp; Florence"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvCircuitDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7 jours"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Voyageurs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Voyageurs"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <!-- Adultes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Adultes"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                    <ImageButton
                        android:id="@+id/btnAdultsMinus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_remove"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Moins" />

                    <TextView
                        android:id="@+id/tvAdultsCount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#673AB7" />

                    <ImageButton
                        android:id="@+id/btnAdultsPlus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Plus" />
                </LinearLayout>

                <!-- Enfants -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enfants (0-18 ans)"
                        android:textSize="14sp"
                        android:textColor="#212121" />

                    <ImageButton
                        android:id="@+id/btnChildrenMinus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_remove"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Moins" />

                    <TextView
                        android:id="@+id/tvChildrenCount"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#673AB7" />

                    <ImageButton
                        android:id="@+id/btnChildrenPlus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_add"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Plus" />
                </LinearLayout>
                
                <!-- Affichage des Ã¢ges des enfants -->
                <TextView
                    android:id="@+id/tvChildrenAges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enfant 1: 10 ans, Enfant 2: 5 ans"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Date de dÃ©part -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/layoutDepartureDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“… Date de dÃ©part"
                    android:textSize="14sp"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvDepartureDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--/--/----"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Niveau d'hÃ´tel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¨ Niveau d'hÃ´tel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rgHotelLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbHotelStandard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â­ Standard (inclus)"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbHotelSuperior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â­â­ SupÃ©rieur (+200 TND/pers)"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbHotelLuxury"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â­â­â­ Luxe (+450 TND/pers)"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Classe de vol -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœˆï¸ Classe de vol"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rgFlightClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbFlightEconomy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Economy (inclus)"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbFlightBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Business (+400 TND/pers)"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbFlightFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First (+900 TND/pers)"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ActivitÃ©s optionnelles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ ActivitÃ©s optionnelles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/activitiesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Prix total et bouton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’° Prix total"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 TND"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continuer"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:backgroundTint="#673AB7" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
