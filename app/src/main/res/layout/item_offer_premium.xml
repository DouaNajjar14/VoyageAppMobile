<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image avec overlay gradient -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="0dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivOfferImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/gradient_red_orange"
                android:contentDescription="Image de l'offre"/>

            <!-- Gradient overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay_full"/>

            <!-- Badge type -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/badgeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FF6B6B"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HÔTEL"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Favori icon -->
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_border"
                android:background="@drawable/circle_white_semi_transparent"
                android:contentDescription="Favori"/>

            <!-- Prix badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="À partir de"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:alpha="0.9"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 €"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Contenu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Titre -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre de l'offre"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"/>

            <!-- Étoiles (pour hôtels) -->
            <LinearLayout
                android:id="@+id/layoutStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐⭐⭐⭐⭐"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  (4.8)"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <!-- Localisation / Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivLocationIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    android:tint="#FF6B6B"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Localisation"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- Description courte -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description courte de l'offre"
                android:textSize="14sp"
                android:textColor="#888888"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="8dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Footer avec bouton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Info supplémentaire -->
                <LinearLayout
                    android:id="@+id/layoutExtraInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivExtraIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_info"
                        android:tint="#999999"/>

                    <TextView
                        android:id="@+id/tvExtraInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Bouton voir détails -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Voir détails"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="24dp"
                    android:backgroundTint="#FF6B6B"
                    android:textColor="@android:color/white"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="end"
                    app:iconSize="18dp"
                    app:iconTint="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
