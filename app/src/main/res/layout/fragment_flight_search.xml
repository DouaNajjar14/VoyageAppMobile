<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Type de vol: Aller simple / Aller-retour -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTripType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRoundTrip"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aller-retour"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOneWay"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aller simple" />

            </com.google.android.material.chip.ChipGroup>

        </com.google.android.material.card.MaterialCardView>

        <!-- Origine et Destination -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Origine -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOrigin"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ville de départ"
                    app:startIconDrawable="@drawable/ic_flight_takeoff"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOrigin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="Tunis (TUN)" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bouton inverser -->
                <ImageButton
                    android:id="@+id/btnSwapCities"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_swap_vert"
                    android:contentDescription="Inverser origine et destination" />

                <!-- Destination -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDestination"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ville d'arrivée"
                    app:startIconDrawable="@drawable/ic_flight_land"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="Paris (PAR)" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Dates -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Date de départ -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDepartureDate"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Date de départ"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_drop_down">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDepartureDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:text="Sélectionner une date" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date de retour -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilReturnDate"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date de retour"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_drop_down">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etReturnDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:text="Sélectionner une date" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Passagers et Classe -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Passagers -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassengers"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Passagers"
                    app:startIconDrawable="@drawable/ic_person"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_drop_down">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"
                        android:text="1 Adulte, Économique" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Bouton Rechercher -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearchFlights"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Rechercher des vols"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:cornerRadius="12dp" />

    </LinearLayout>

</ScrollView>
