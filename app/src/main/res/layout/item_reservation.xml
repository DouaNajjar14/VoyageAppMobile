<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReservation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bande de couleur en haut selon le type -->
        <View
            android:id="@+id/viewColorBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#1976D2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- En-tÃªte avec type et statut -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- IcÃ´ne selon le type -->
                <TextView
                    android:id="@+id/tvOfferIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ¨"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#E3F2FD" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvOfferType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HÃ”TEL"
                        android:textSize="11sp"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… ConfirmÃ©e"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- FlÃ¨che pour indiquer que c'est cliquable -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€º"
                    android:textSize="32sp"
                    android:textColor="#BDBDBD" />

            </LinearLayout>

            <!-- Nom de l'offre -->
            <TextView
                android:id="@+id/tvOfferName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HÃ´tel Dar El Medina"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp" />

            <!-- SÃ©parateur -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Informations en bas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Date"
                        android:textSize="11sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvBookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04/01/2026"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Prix -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Prix total"
                        android:textSize="11sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="330.00 TND"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />
                </LinearLayout>

            </LinearLayout>

            <!-- Dates de sÃ©jour (optionnel) -->
            <TextView
                android:id="@+id/tvDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Du 04/01/2026 au 08/01/2026"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Nombre de personnes (optionnel) -->
            <TextView
                android:id="@+id/tvGuests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ 2 adulte(s), 1 enfant(s)"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
